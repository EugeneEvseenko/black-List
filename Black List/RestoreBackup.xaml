<Window x:Class="Black_List.RestoreBackup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Black_List"
        mc:Ignorable="d"
        Title="Восстановление резервной копии" Height="291.591" Width="440" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="ListBases" Margin="10,10,10,60" SelectionChanged="ListBases_SelectionChanged"/>
        <Button Content="Отмена" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsCancel="True" Cursor="Hand"/>
        <Button x:Name="RestoreButton" Content="Восстановить" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="101" IsDefault="True" IsEnabled="False" Click="RestoreButton_Click" Cursor="Hand"/>
        <Button x:Name="CustomSelectBase" Content="Обзор..." HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="CustomSelectBase_Click" Cursor="Hand"/>
        <Label x:Name="InfoLabel" Content="" Margin="10,0,10,32" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
